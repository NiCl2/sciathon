{
    "name": "authentiSci",
    "version": "0.1.1",
    "manifest_version": 2,
    "description": "View scientific reliability scores when viewing science news articles online.",
    "icons": {
        "16" : "icons/icon_16x16.png",
        "32" : "icons/icon_32x32.png",
        "48" : "icons/icon_48x48.png",
        "128" : "icons/icon_128x128.png"
    },
    "browser_action": {
        "default_title": "authentiSci",
        "default_icon": {
            "32" : "icons/icon_32x32.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "persistent": false,
        "scripts": ["javascript/background.js"]
    },
    "permissions": ["tabs", "notifications"]
    
}
