{
    "name": "authentiSci",
    "version": "0.1.2",
    "manifest_version": 2,
    "description": "View scientific reliability scores when viewing science news articles online.",
    "icons": {
        "16" : "images/icon_16x16.png",
        "32" : "images/icon_32x32.png",
        "48" : "images/icon_48x48.png",
        "128" : "images/icon_128x128.png"
    },
    "browser_action": {
        "default_title": "authentiSci",
        "default_icon": {
            "16" : "images/icon_16x16.png",
            "32" : "images/icon_32x32.png",
            "48" : "images/icon_48x48.png",
            "128" : "images/icon_128x128.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "persistent": false,
        "scripts": ["javascript/background.js"]
    },
    "permissions": [
        "tabs", 
        "notifications",
        "https://authentisci-api.herokuapp.com/api/v1/*",
        "https://www.authentisci.com",
        "https://orcid.org/*"
    ]
    
}
